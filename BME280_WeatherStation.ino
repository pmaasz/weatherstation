void setup() {
  Serial.begin(9600);
  Serial.println("Weather Station start");

  setupDisplay();
  logo();
  
  initBMESensor();
  
  display.setTextSize(2);
  i = 0;
}

void initBMESensor() {
  if (!bme.begin(0x76)) {
    Serial.println("Could not find a valid BME280 sensor, check wiring!");
    while (1);
  }
}

void setupDisplay() {
    display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
    display.clearDisplay();
    display.setTextColor(WHITE);
    display.setTextSize(1);

    Serial.println("Display ready.");
}

void logo() {
    display.setCursor(30, 10);
    display.println("Hello World");
    display.setCursor(36, 20);
    display.println("Computing");
    display.display();
}

void readData() {
   Serial.print(F("Duration in Seconds:\t\t"));
   Serial.println(float(millis())/1000);
 
   Serial.print(F("Temperature in Celsius:\t\t")); 
   temperature = bme.readTemperature();
   Serial.println(temperature);
   
   Serial.print(F("Humidity in %:\t\t\t")); 
   humidity = bme.readHumidity();
   Serial.println(humidity);

   Serial.print(F("Pressure in hPa:\t\t")); 
   pressure = bme.readPressure()/100.0F;
   Serial.println(pressure);
   
   Serial.println();
   Serial.println();
}

void outputData() {
  display.clearDisplay();

  switch(i){
    case 0: 
      printTemperature();
      break;
    case 1: 
      printPressure();
      break;
    case 2: 
      printHumidity();
      break;
  }
  
  display.display();
}

void printTemperature() {  
  display.drawBitmap(0, 0, TemperatureBitmap, 128, 32, WHITE);
  display.setCursor(45,7);
  display.print(temperature);
  display.println("C");
}

void printPressure() {
  display.drawBitmap(0, 7, PressureBitmap, 128, 32, WHITE);
  display.setCursor(45,7);
  display.print((int)pressure);
  display.println("Pa");
}

void printHumidity() {
  display.drawBitmap(0, 0, HumidityBitmap, 128, 32, WHITE);  
  display.setCursor(45,7);
  display.print(humidity);
  display.println("%");
}

void loop() { 
 readData();
 outputData();
 i++;

 if(i == 3) {
   i = 0;
 }
 Serial.println(i);
 delay(2000);
}
